<h1>Owners</h1>
<table id="table_id" class="table stripped" >
  <thead>
    <tr>
      <th>Frst name</th>
      <th>Last name</th>
      <th>Phone number</th>
      <th>Email</th>
      <th>Address</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @owners.each do |owner| %>
      <tr>
        <td><%= owner.frst_name %></td>
        <td><%= owner.last_name %></td>
        <td><%= owner.phone_number %></td>
        <td><%= owner.email %></td>
        <td><%= owner.address %></td>
        <td><%= link_to 'Show', owner %></td>
        <td><%= link_to 'Edit', edit_owner_path(owner) %></td>
        <td><%= link_to 'Destroy', owner, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Owner', new_owner_path %>




